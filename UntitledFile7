var param = {
  regionId: 30107,
  gridName: '',
  sampleSize: 7000,
  minSamples: 2000,
  yearsPreview: [2000, 2018],
  mos:'',
  variables: [
    // bandas espectrales:
    // bandas derivadas del SMA:
    // indices:
    "blue_median","green_dry","green_median","red_dry","red_median",
 "nir_dry", "nir_median", "nir_wet", "swir1_dry", "swir1_median",
